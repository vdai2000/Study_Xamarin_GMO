<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI_Xamarin.Views.CarouselPage">
    <ContentPage.Content>
        <StackLayout>
            <CarouselView ItemsSource="{Binding ListImage}" x:Name="mainCarousel">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label HorizontalOptions="Center" Text="{Binding Type}"/>
                            <Image Source="{Binding ImageType}"/>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>