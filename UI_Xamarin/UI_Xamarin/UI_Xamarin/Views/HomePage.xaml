<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI_Xamarin.Views.HomePage">
    <ContentPage.Content>
        <StackLayout Spacing="20">
            <Entry x:Name="IP_NamePET" Placeholder="Tìm Tên Thú Cưng" />
            <Button 
             Text="Tìm"
             Clicked="Button_Search_Clicked"
             ></Button>

            <Label Text="Tên"
             x:Name="NamePET"
             HorizontalOptions="Center"/>
            <Image x:Name="imgPET"
             Aspect="AspectFill"
             BackgroundColor="Blue"
             HorizontalOptions="Center"
             WidthRequest="240"
             HeightRequest="240"/>

            <Button Text="Xem Theme" Clicked="Button_Detail_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>