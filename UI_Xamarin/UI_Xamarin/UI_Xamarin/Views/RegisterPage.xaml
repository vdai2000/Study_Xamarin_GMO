<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI_Xamarin.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="40">
            <Label Text="Name" />
            <Entry Placeholder="Full Name" x:Name="ET_FullName"/>
            <Label Text="User"/>
            <Entry Placeholder="User" x:Name="ET_User"/>
            <Label Text="Password" />
            <Entry Placeholder="Password" x:Name="ET_Password" IsPassword="True"/>
            <Label Text="Verify"/>
            <Entry Placeholder="Verify" x:Name="ET_Verify" IsPassword="True"/>
            <Label Text="Gender"/>
            <StackLayout Orientation="Horizontal">
                <RadioButton x:Name="Male" Value="Male" Content="Male"/>
                <RadioButton x:Name="FeMale" Value="FeMale" Content="FeMale"/>
            </StackLayout>
            <Label Text="Date"/>
            <DatePicker x:Name="startDatePicker"
                    Format="dd/MM/yyyy"
                    Margin="30, 0, 0, 30"
                     />

            <Button Text="Register" Clicked ="Button_Register_ClickedAsync" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>